      "version": "0.2.0",
      "configurations": [
        {
          "name": "ng serve",
          "type": "pwa-chrome",
          "request": "launch",
          "preLaunchTask": "npm: start",
          "url": "http://localhost:4200/"
        },
            {
                  "type": "chrome",
                  "request": "launch",
                  "name": "Launch Chrome against localhost",
                  "url": "http://localhost:4200",
                  "webRoot": "${workspaceFolder}/testapp",
                  "sourceMaps": true,
                  "resolveSourceMapLocations": [
                    "${workspaceFolder}/projects/**",

                  ],
            },
            {
              "type": "pwa-node",
              "request": "launch",
              "name": "Launch Tests",
              "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
              "internalConsoleOptions": "openOnSessionStart",
              "preLaunchTask": "Build",
              "sourceMaps": true,
              "resolveSourceMapLocations": [
                  "${workspaceFolder}/**",
                  "!**/node_modules/**"
              ]
        }
      ]
}
